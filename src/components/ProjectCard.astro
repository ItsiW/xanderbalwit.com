---
interface Props {
  title: string;
  role: string;
  description: string;
  url?: string;
}

const { title, role, description, url } = Astro.props;
---

<div class="bg-cream-dark/50 p-6 rounded-lg border border-cream-dark hover:border-fire-yellow transition-colors">
  {url ? (
    <a href={url} target="_blank" rel="noopener" class="no-underline group">
      <h3 class="font-serif text-xl text-charcoal group-hover:text-fire-orange-deep transition-colors">{title}</h3>
    </a>
  ) : (
    <h3 class="font-serif text-xl text-charcoal">{title}</h3>
  )}
  <p class="text-sm font-medium text-fire-amber mt-1">{role}</p>
  <p class="text-charcoal-light mt-3 text-sm leading-relaxed">{description}</p>
</div>
